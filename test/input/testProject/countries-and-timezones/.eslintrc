{
  "extends": [
    "airbnb",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest"
  ],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "Promise": "readonly"
  },
  "ignorePatterns": [
    "dist/**",
    "esm/**"
  ],
  "rules": {
    "no-use-before-define": ["error", { "functions": false }]
  }
}
